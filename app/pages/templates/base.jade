doctype html
html(lang="en")

  head
    block configParams
    -
      title       = typeof title === "undefined"       ? "Nanobox" : title
      keywords    = typeof keywords === "undefined"    ? "paas,app hosting" : keywords
      description = typeof description === "undefined" ? "nanobox" : description

    title= title
    meta( name="viewport"    content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0" )
    meta( name="description" content="#{description}")
    meta( name="keywords"    content="#{keywords}")
    meta( http-equiv="Content-Type" content="text/html; charset=UTF-8" )

    // build:css /style.css
    link(href='/css/shared-svg.css' rel='stylesheet' type='text/css')
    link(href="/bower-libs/front-top-nav/rel/style.css", rel="stylesheet")
    link(href='/css/hexes-svg.css' rel='stylesheet' type='text/css')
    link(href='/css/hexes-frameworks-svg.css' rel='stylesheet' type='text/css')
    link(href='/css/base-svg.css' rel='stylesheet' type='text/css')
    link(href="/css/main.css", rel="stylesheet")
    // endbuild

    block css

    link(href='//fonts.googleapis.com/css?family=Lato:400,400italic' rel='stylesheet' type='text/css')
    link(rel="icon" type="image/png" href="/assets/favicon.png")

  body
    .main-wrapper
      include ../shared/top-nav.jade
      .content-area
        .eol
          .txt WARNING: Nanobox is reaching its end of life on March 31, 2021.<br \>After that time, you will be unable to access the Nanobox service.<br \>
          a(href="//blog.digitalocean.com/digitalocean-acquires-nanobox")
            .txt More info.
        block content

    //- most of this is built via css/js
    .support
      .icon
      .txt

    // build:js /js/libs.js
    script(src="/bower-libs/front-top-nav/rel/style.js")
    script(src="/bower-libs/jquery/dist/jquery.js")
    script(src="/bower-libs/jade/runtime.js")
    script(src="/bower-libs/shadow-icons/rel/app.js")
    script(src="/bower-libs/velocity/velocity.js")
    script(src="/bower-libs/js-yaml/dist/js-yaml.js")
    script(src="/bower-libs/prism/prism.js" data-manual)
    script(src="/bower-libs/prism/components/prism-yaml.js")
    script(src="/bower-libs/prism/components/prism-bash.js")
    script(src="/bower-libs/prism/components/prism-ruby.js")
    script(src="/bower-libs/prism/components/prism-php.js")
    script(src="/bower-libs/prism/components/prism-python.js")
    script(src="/bower-libs/prism/components/prism-go.js")
    script(src="/bower-libs/prism/components/prism-apacheconf.js")
    script(src="/bower-libs/prism/components/prism-sql.js")
    script(src="/bower-libs/prism/components/prism-elixir.js")
    script(src="/bower-libs/prism/components/prism-java.js")
    script(src="/bower-libs/prism/components/prism-scala.js")
    script(src="/js/shared.js")
    script(src="/js/jade-templates.js")
    script(src="/js/shared-svg.js")
    script(src="/js/hexes-svg.js")
    script(src="/js/hexes-frameworks-svg.js")
    script(src="/js/base-svg.js")
    script(src="/js/top-nav.js")
    //- script(src="/js/olark-groove.js")``
    // endbuild

    // build:js /js/main.js
    //- Move this to only load on article pages
    script(src="/bower-libs/clipboard/dist/clipboard.js")
    script(src="/js/article/config-machine.js")
    script(src="/js/article/snippet.js")
    script(src="/js/article.js")
    script(src="/js/article-meta.js")
    //- script(src="/js/olark-groove.js")
    // endbuild

    script(src="https://use.typekit.net/cqd5kth.js")
    script try{Typekit.load({ async: true });}catch(e){}

    // build:remove
    script(src="//guides.nanobox.local:35729/livereload.js")
    //- script(src="//localhost:35729/livereload.js")
    script(src="/js/local.js")
    // endbuild

    block js

    //-
    script(type="text/javascript").
      $mainwrapper = $(".main-wrapper");
      castShadows( $('.main-wrapper') );
      topNav = new nanobox.TopNav( $(".top-nav") );

    include ../shared/google-analytics.jade
    include ../shared/intercom.jade
